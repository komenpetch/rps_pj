datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id       Int      @id @default(autoincrement())
    name     String   @unique
    email    String   @unique
    password String
    role     String   @default("player") // "admin" or "player"
    scores   Score[]
}

model Score {
    id       Int      @id @default(autoincrement())
    userId   Int
    value    Int
    user     User     @relation(fields: [userId], references: [id])
    createdAt DateTime @default(now())
}
